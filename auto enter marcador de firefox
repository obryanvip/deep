######version111111 enter cada vez que doy clip


javascript:(function(){
    window.scrollTo(0, document.body.scrollHeight / 2);
    setTimeout(function(){
        var event = new KeyboardEvent('keydown', {
            bubbles: true,
            cancelable: true,
            key: 'Enter',
            code: 'Enter',
            keyCode: 13,
            charCode: 13,
            which: 13
        });
        document.activeElement.dispatchEvent(event);
    }, 1000);
})();












