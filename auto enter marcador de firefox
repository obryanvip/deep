            charCode: 13,
            which: 13
        });
        document.activeElement.dispatchEvent(event);
    }, 2000);
})();




###########version 3 se detiene al el usuario haga cualquier cosa con el teclado o raton

 
 javascript:(function(){
    window.scrollTo(0, document.body.scrollHeight / 2);

    var intervalId = setInterval(function(){
        var event = new KeyboardEvent('keydown', {
            bubbles: true,
            cancelable: true,
            key: 'Enter',
            code: 'Enter',
            keyCode: 13,
            charCode: 13,
            which: 13
        });
        document.activeElement.dispatchEvent(event);
    }, 2000);

    function stopInterval() {
        clearInterval(intervalId);
        document.removeEventListener('keydown', stopInterval);
        document.removeEventListener('click', stopInterval);
    }

    document.addEventListener('keydown', stopInterval);
    document.addEventListener('click', stopInterval);
})();









